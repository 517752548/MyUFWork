        /// <summary>
        /// 左上角坐标系象素坐标转换为unity坐标。
        /// </summary>
        /// <returns>The left top pixel pos2 unity position.</returns>
        /// <param name="leftTopPixelPos">Left top pixel position.</param>
        public static Vector3 ConvertLeftTopPixelPos2UnityPos(Vector2 leftTopPixelPos)
        {
            int mapPixelW = ZoneModel.ins.mapPixelWidth;
            int mapPixelH = ZoneModel.ins.mapPixelHeight;
            int pixelPerUnit = ZoneDef.MAP_PIXEL_ONE_UNIT;
            float halfMapW = (float)mapPixelW / (float)pixelPerUnit / 2f;
            float halfMapH = (float)mapPixelH / (float)pixelPerUnit / 2f;
            float x = leftTopPixelPos.x / pixelPerUnit - halfMapW;
            float y = halfMapH - leftTopPixelPos.y / pixelPerUnit;
            return new Vector3(x, 0, y);
        }

        /// <summary>
        /// unity坐标转换为左上角坐标系象素坐标。
        /// </summary>
        /// <returns>The unity pos2 left top pixel position.</returns>
        /// <param name="unityPos">Unity position.</param>
        public static int[] ConvertUnityPos2LeftTopPixelPos(Vector3 unityPos)
        {
            int mapPixelW = ZoneModel.ins.mapPixelWidth;
            int mapPixelH = ZoneModel.ins.mapPixelHeight;
            int pixelPerUnit = ZoneDef.MAP_PIXEL_ONE_UNIT;
            float halfMapW = (float)mapPixelW / (float)pixelPerUnit / 2f;
            float halfMapH = (float)mapPixelH / (float)pixelPerUnit / 2f;
            float x = (halfMapW + unityPos.x) * pixelPerUnit;
            float z = (halfMapH - unityPos.z) * pixelPerUnit;
            return new int[]{ Mathf.CeilToInt(x), Mathf.CeilToInt(z) };
        }

