        private static bool IsPointInTriangle(Vector2 A, Vector2 B, Vector2 C, Vector2 P)
        {
            Vector2 v0 = C - A;
            Vector2 v1 = B - A;
            Vector2 v2 = P - A;

            float dot00 = Vector2.Dot(v0, v0);
            float dot01 = Vector2.Dot(v0, v1);
            float dot02 = Vector2.Dot(v0, v2);
            float dot11 = Vector2.Dot(v1, v1);
            float dot12 = Vector2.Dot(v1, v2);

            float inverDeno = 1 / (dot00 * dot11 - dot01 * dot01);

            float u = (dot11 * dot02 - dot01 * dot12) * inverDeno;
            if (u < 0 || u > 1) // if u out of range, return directly
            {
                return false;
            }

            float v = (dot00 * dot12 - dot01 * dot02) * inverDeno;
            if (v < 0 || v > 1) // if v out of range, return directly
            {
                return false;
            }

            return u + v <= 1;
        }

        /// <summary>
        /// 根据地图寻路格子位置 ，获得该格子的Unity坐标值（unity左下角坐标系）
        /// </summary>
        /// <param name="col"></param>
        /// <param name="row"></param>
        /// <returns></returns>
        public static Vector3 ConvertMapPathTilePos2UnityPos(int col, int row)
        {
            int posx = col * SceneModel.ins.zoneMapConfig.pathTileWidth;
            if (row % 2 != 0)
            {
                posx += SceneModel.ins.zoneMapConfig.pathTileWidth / 2;
            }
            int posy = row * SceneModel.ins.zoneMapConfig.pathTileHeight / 2;
            return ConvertLeftTopPixelPos2UnityPos(new Vector2(posx, posy));
        }

        /// <summary>
        /// 人物摄像机下的3d物体 到地面摄像机的视口中心点的向量 和 到人物摄像机的视口中心点的向量 间的差值。
        /// </summary>
        /// <returns>The fixed position.</returns>
        /// <param name="container">Container.</param>
        public static Vector3 GetFixedPosition(Transform container)
        {
            Transform chaCamTrans = SceneModel.ins.zone3DModelCam.transform;
            Transform camContainerTrans = chaCamTrans.parent;
            Vector3 camsPos = camContainerTrans.localPosition;
            Vector3 containerPos = container.localPosition;
            float angle = (90f - chaCamTrans.eulerAngles.x);
            //物体到垂直摄像机的距离
            float camsObjDist = containerPos.z - camsPos.z;
            //float z0 = Mathf.Tan(angle * Mathf.PI / 180f) * (chaCamTrans.localPosition.y - containerPos.y);
            float z0 = 0;
            float z1 = camsObjDist * Mathf.Cos(angle * Mathf.PI / 180f);
            //30
            float z3 = camsObjDist / (ZoneModel.ins.viewportHeight * 0.2f);
            //37
            //float z3 = camsObjDist / (ZoneModel.ins.viewportHeight * 1.7f);
            //45
            //float z3 = -camsObjDist / (ZoneManager.ins.viewportHeight * 0.32f);
            float z = z0 + z1 + z3;
            Vector3 localPos = new Vector3(0, 0, z);
            localPos = Quaternion.Euler(container.eulerAngles * -1) * localPos;
            return localPos;
        }

        /// <summary>
        /// 格子间的距离
        /// </summary>
        /// <param name="x"></param>
        /// <param name="y"></param>
        /// <param name="dx"></param>
        /// <param name="dy"></param>
        /// <returns></returns>
        public static float GetDistance(int x, int y, int dx, int dy)
        {
            return Mathf.Sqrt((x - dx) * (x - dx)*1f + (y - dy)*(y-dy)*1f);
        }

        /// <summary>
        /// 格子是否再范围内
        /// </summary>
        /// <param name="x"></param>
        /// <param name="y"></param>
        /// <param name="dx"></param>
        /// <param name="dy"></param>
        /// <param name="offset"></param>
        /// <returns></returns>
        public static bool inArea(int x, int y, int dx, int dy, int offset)
        {
            if (offset <= 0)
            {
                return false;
            }
            if (Mathf.Sqrt((x - dx) * (x - dx)*1f + (y - dy)*(y-dy)*1f) > offset)
            {
                return false;
            }
            return true;
        }
    }
