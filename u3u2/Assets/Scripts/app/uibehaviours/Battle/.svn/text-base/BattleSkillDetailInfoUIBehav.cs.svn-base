using UnityEngine;
using UnityEngine.UI;
using System.Collections;

public class BattleSkillDetailInfoUIBehav : MonoBehaviour
{
	public Image icon;
	public Text nameTxt;
	public Text levelTxt;
	public Text costTxt;
	public Text descTxt;

    public void Init()
    {
        icon = transform.Find("icon").GetComponent<Image>();

        nameTxt = transform.Find("name").GetComponent<Text>();
        levelTxt = transform.Find("level").GetComponent<Text>();
        costTxt = transform.Find("cost").GetComponent<Text>();
        descTxt = transform.Find("desc").GetComponent<Text>();
        icon.gameObject.SetActive(false);
    }
}