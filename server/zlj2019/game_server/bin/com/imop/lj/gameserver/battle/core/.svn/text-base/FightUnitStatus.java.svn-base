package com.imop.lj.gameserver.battle.core;

public interface FightUnitStatus {

	/** 正常状态*/
	public static final long NORMAL = 0L;
	/** 死亡*/
	public static final long DEAD = 1L;
	/** 被控制（被眩晕）*/
	public static final long DISABLE = 2L;
	/** 禁止普通攻击*/
	public static final long FORBID_NORMAL = 4L;
	/** 禁止技能攻击（被沉默）*/
	public static final long FORBID_SKILL = 8L;
	/** 被捕捉了 */
	public static final long BE_CAUGHT = 16L;
	/** 防御 */
	public static final long DEFENCE = 32L;
	/** 无敌 */
	public static final long NBDZT = 64L;
	/** 混乱 */
	public static final long CHAOS = 128L;
	/** 逃跑 */
	public static final long ESCAPE = 256L;
	/** 被击飞 */
	public static final long DEAD_FLY = 512L;
}