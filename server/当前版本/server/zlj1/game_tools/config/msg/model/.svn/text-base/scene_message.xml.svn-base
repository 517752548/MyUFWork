<?xml version="1.0" encoding="utf-8" ?>
<messages xmlns="http://com.imop.lj.message" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://com.imop.lj.message message.xsd" module="scene">
	
	<message type="CG_SCENE_PLAYER_ENTER" comment="玩家进入场景">
		<field type="Integer" name="sceneId" comment="场景id" />
	</message>
	
	<message type="GC_SCENE_PLAYER_LIST" comment="场景玩家列表" compress="true">
		<field type="Integer" name="sceneId" comment="场景id" />
		<field type="com.imop.lj.common.model.ScenePlayerInfoData" clientType="ScenePlayerInfoData" list="true" 
			name="scenePlayerInfoDataList" comment="场景玩家信息">
			<field type="Long" name="uuid" comment="角色id" />
			<field type="String" name="playerDataJson" comment="玩家信息json串" />
		</field>
	</message>
	
	<!--<message type="CG_SCENE_PLAYER_LEAVE" comment="玩家离开场景">
	</message>-->
	
	<message type="CG_SCENE_PLAYER_MOVE" comment="场景移除的玩家">
		<field type="Integer" name="x" comment="x坐标" />
		<field type="Integer" name="y" comment="y坐标" />
	</message>

	<message type="GC_SCENE_PLAYER_REMOVE_LIST" comment="场景移除的玩家">
		<field type="Integer" name="sceneId" comment="场景id" />
		<field type="Long" name="uuid" list="true" comment="角色id" />
	</message>

	<message type="GC_SCENE_PLAYER_ADDED_LIST" comment="场景新增的玩家" compress="true">
		<field type="Integer" name="sceneId" comment="场景id" />
		<field type="com.imop.lj.common.model.ScenePlayerInfoData" clientType="ScenePlayerInfoData" list="true" 
			name="scenePlayerInfoDataList" comment="场景玩家信息">
			<field type="Long" name="uuid" comment="角色id" />
			<field type="String" name="playerDataJson" comment="玩家信息json串" />
		</field>
	</message>

	<message type="GC_SCENE_PLAYER_CHANGED_LIST" comment="场景变化的玩家信息列表" compress="true">
		<field type="Integer" name="sceneId" comment="场景id" />
		<field type="com.imop.lj.common.model.ScenePlayerInfoData" clientType="ScenePlayerInfoData" list="true" 
			name="scenePlayerInfoDataList" comment="场景玩家信息">
			<field type="Long" name="uuid" comment="角色id" />
			<field type="String" name="playerDataJson" comment="玩家信息json串" />
		</field>
	</message>
	
	<message type="GC_SCENE_PLAYER_MOVED_LIST" comment="场景移动的玩家" compress="true">
		<field type="Integer" name="sceneId" comment="场景id" />
		<field type="com.imop.lj.common.model.ScenePlayerMoveInfo" clientType="ScenePlayerMoveInfo" list="true" 
			name="scenePlayerMoveList" comment="场景玩家信息">
			<field type="Long" name="uuid" comment="角色id" />
			<field type="Integer" name="x" comment="x坐标" />
			<field type="Integer" name="y" comment="y坐标" />
			<field type="Integer" name="instantFlag" comment="是否瞬移，0否，1是" />
		</field>
	</message>
	
	<message type="GC_SCENE_PLAYER_FORCE_TO_CITY_SCENE" comment="玩家被强制踢回主城">
		<field type="Integer" name="fromSceneId" comment="从哪个场景被踢的" />
	</message>
	
</messages>