<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns="http://com.imop.lj.message" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://com.imop.lj.message message.xsd" module="pubtask">

	<message type="CG_OPEN_PUBTASK_PANEL" comment="打开酒馆任务面板">
	</message>
	
	<message type="GC_OPEN_PUBTASK_PANEL" comment="打开酒馆任务面板">
		<field type="com.imop.lj.common.model.BackupPubTaskInfo"
			clientType="BackupPubTaskInfo" name="backupPubTaskInfos" list="true" comment="备选任务列表" >
			<field type="Integer" name="questId" comment="任务模板Id" />
			<field type="Integer" name="star" comment="任务星数" />
			<field type="Integer" name="status" comment="任务状态" />
			<field type="com.imop.lj.common.model.reward.RewardInfo"
				clientType="RewardInfoData" name="rewardInfo" comment="任务奖励信息" macro="RewardInfo">
		</field>
		</field>
		<field type="Integer" name="finishTimes" comment="今日已完成任务数" />
		<field type="Integer" name="totalTimes" comment="总任务数" />
	</message>
	
	<message type="GC_PUBTASK_DONE" comment="已完成所有任务">
	</message>
	
	<message type="GC_PUBTASK_UPDATE" comment="酒馆任务更新消息">
		<field type="com.imop.lj.common.model.quest.QuestInfo"
			clientType="QuestInfoData" name="questInfo" comment="单个任务" macro="QuestInfo">
		</field>
	</message>
	
	<message type="CG_PUBTASK_ACCEPT" comment="接受任务">
		<field type="Integer" name="questId" comment="任务Id" />
	</message>
	
	<message type="CG_GIVE_UP_PUBTASK" comment="放弃已接任务">
	</message>
	
	<message type="CG_FINISH_PUBTASK" comment="完成任务">
	</message>

	<message type="CG_PUBTASK_REFRESH" comment="酒馆任务手动刷新">
	</message>

	<message type="CG_PUBTASK_REFRESH_NEW" comment="酒馆任务手动刷新">
		<field type="Integer" name="refreshType" comment="0-普通刷新,1-金子刷新" />
	</message>
	
	<message type="GC_PUBTASK_MAX_STAR" comment="玩家酒馆任务最大星数">
		<field type="Integer" name="star" comment="玩家酒馆任务最大星数" />
	</message>
	
	

</messages>