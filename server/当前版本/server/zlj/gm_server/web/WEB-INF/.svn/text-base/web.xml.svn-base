<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="gm_server" version="2.5">
	<display-name>gm</display-name>
	<description>Game Manager</description>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>gm.root</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/applicationContext*.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/classes/log4j.properties</param-value>
	</context-param> 
	<context-param> 
		<param-name>quartzConfigLocation</param-name>
		<param-value>/WEB-INF/classes/quartz.properties</param-value>
	</context-param>
	<servlet>
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet 
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/classes/gm-servlet*.xml </param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>dispatcherServlet</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>PlatformGmServlet</servlet-name>
		<servlet-class>com.imop.lj.gm.platform.CsjPlatformGmServlet</servlet-class>
		<init-param>
			<param-name>reflect</param-name>
			<param-value>com.imop.lj.gm.platform.CsjPlatformGmService</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>PlatformGmServlet</servlet-name>
		<url-pattern>/gmapi/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UploadServlet</servlet-name>
		<servlet-class>com.imop.lj.gm.upload.UploadServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>UploadServlet</servlet-name>
		<url-pattern>/uploadfile</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>initServlet</servlet-name>
		<servlet-class>com.imop.lj.gm.web.InitServlet</servlet-class>
		<init-param>
		   <param-name>start-scheduler-on-load</param-name>
		   <param-value>true</param-value>
		 </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<filter>
		<filter-name>checkLogonFilter</filter-name>
		<filter-class>com.imop.lj.filter.CheckLogonFilter</filter-class>
	</filter>
	<filter>
		<filter-name>dbLogFilter</filter-name>
		<filter-class>com.imop.lj.filter.DBLogFilter</filter-class>
	</filter>
	<filter>
		<filter-name>sysUserFilter</filter-name>
		<filter-class>com.imop.lj.filter.SysUserFilter</filter-class>
	</filter>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter 
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>requestContextFilter</filter-name>
		<filter-class>org.springframework.web.filter.RequestContextFilter</filter-class>
	</filter>
	<filter>
	<filter-name>webLogFilter</filter-name>
	<filter-class>com.imop.lj.filter.WEBLogFilter</filter-class>
	</filter>
	<filter>
		<filter-name>pagerFilter</filter-name>
		<filter-class>com.imop.lj.gm.page.PagerFilter </filter-class>
	</filter>
	<filter>
		<filter-name>autoWebLogFilter</filter-name>
		<filter-class>com.imop.lj.filter.WEBAutoLogFilter</filter-class>
	</filter>

	<!-- filterMapping -->
	<filter-mapping>
		<filter-name>requestContextFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>checkLogonFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>webLogFilter</filter-name>
		<url-pattern>basicLog.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>autoWebLogFilter</filter-name>
		<url-pattern>autoLog.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>pagerFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>dbLogFilter</filter-name>
		<url-pattern>export.do</url-pattern>
		<url-pattern>*Log.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>sysUserFilter</filter-name>
		<url-pattern>sysUser.do</url-pattern>
	</filter-mapping>
	<mime-mapping>
	<extension>xls</extension>
	<mime-type>application/msexcel</mime-type>
	</mime-mapping>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener 
		</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener 
		</listener-class>
	</listener>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!--
		<error-page> <error-code>404</error-code>
		<location>/common/notFind.jsp</location> </error-page>
	-->
</web-app>