log4j.rootLogger=info,R,stdout
log4j.logger.tr.platformlocal=debug,P
log4j.logger.tr.util=debug,U
log4j.logger.tr.login=debug,L
log4j.logger.tr.activiteuser=debug.A

log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.encoding=UTF-8
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d{HH:mm:ss} [%-5p] - %C{1}.%M - %m%n

#--------------------R--------------------------------
log4j.appender.R=org.apache.log4j.DailyRollingFileAppender
log4j.appender.R.File=platform_all.log
log4j.appender.R.datePattern='.'yyyy-MM-dd
log4j.appender.R.append=true
log4j.appender.R.encoding=UTF-8
log4j.appender.R.layout=org.apache.log4j.PatternLayout
log4j.appender.R.layout.ConversionPattern=[%-5p] %d{yyyy-MM-dd HH:mm:ss} %c - %m%n

