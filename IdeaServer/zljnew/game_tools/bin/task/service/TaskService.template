package com.imop.lj.gameserver.${lowModelName};

import java.util.List;

import com.imop.lj.common.InitializeRequired;
import com.imop.lj.common.LogReasons.${modelName}LogReason;
import com.imop.lj.common.constants.LangConstants;
import com.imop.lj.common.constants.Loggers;
import com.imop.lj.core.util.KeyUtil;
import com.imop.lj.gameserver.battle.helper.RandomUtils;
import com.imop.lj.gameserver.behavior.BehaviorTypeEnum;
import com.imop.lj.gameserver.common.Globals;
import com.imop.lj.gameserver.corpstask.msg.GC${bigModelName}Update;
import com.imop.lj.gameserver.corpstask.msg.GCOpen${bigModelName}Panel;
import com.imop.lj.gameserver.corpstask.template.${modelName}Template;
import com.imop.lj.gameserver.func.FuncDef.FuncTypeEnum;
import com.imop.lj.gameserver.human.Human;
import com.imop.lj.gameserver.task.TaskDef.TaskStatus;
import com.imop.lj.gameserver.task.template.QuestTemplate;

public class ${modelName}Service implements InitializeRequired {

	@Override
	public void init() {
		
	}

	public boolean canAcceptTask(Human human, int questId) {
		checkHumanValid(human);
		
		if(human.get${modelName}Manager().isDoing()){
			return false;
		}
		
		//任务是否可做
		boolean canDoFlag = human.getBehaviorManager().canDo(BehaviorTypeEnum.${behavior});
		if(!canDoFlag){
			return false;
		}
		
		return true;
	}
	
	
	/**
	 * 接受任务
	 * @param human
	 * @param corpsLevel 
	 */
	public void acceptTask(Human human, int corpsLevel) {
		checkHumanValid(human);
		
		//任务是否可做
		boolean canDoFlag = human.getBehaviorManager().canDo(BehaviorTypeEnum.${behavior});
		if(!canDoFlag){
			human.sendErrorMessage(LangConstants.${upperModelName}_MAX_NUM,
					human.getBehaviorManager().getMaxCount(BehaviorTypeEnum.${behavior}));
			return;
		}
		//任务状态是否正确
		${modelName} curTask = human.get${modelName}Manager().getCurTask();
		
		${modelName}Template corpsTpl = null;
		if(curTask == null || curTask.getStatus() != TaskStatus.CAN_ACCEPT){
			corpsTpl = randTask(corpsLevel);
		}
		
		if(corpsTpl == null){
			return;
		}
		
		QuestTemplate questTpl = Globals.getTemplateCacheService().get(corpsTpl.getQuestId(), QuestTemplate.class);
		if(questTpl == null){
			Loggers.corpsTaskLogger.error("#${modelName}Service#acceptTask get QuestTemplate is null!questId="+ corpsTpl.getQuestId());
			return;
		}
		
		${modelName} task = buildInitTask(human, questTpl);
		task.onAcceptTask();
	}

	/**
	 * 验证human是否有效
	 * @param human
	 */
	protected void checkHumanValid(Human human) {
		if(human == null || human.get${modelName}Manager() == null){
			return;
		}
	}

	/**
	 * 构建初始的任务数据
	 * @param human
	 * @param questTpl
	 * @return
	 */
	protected ${modelName} buildInitTask(Human human, QuestTemplate questTpl) {
		checkHumanValid(human);
		${modelName} task = new ${modelName}(human, questTpl);
		task.setStatus(TaskStatus.CAN_ACCEPT);
		task.setId(KeyUtil.UUIDKey());
		task.setStartTime(Globals.getTimeService().now());
		task.setLastUpdateTime(Globals.getTimeService().now());
		// 激活并存库
		task.active();
		task.setModified();
		return task;
	}

	protected ${modelName}Template randTask(int level) {
		List<${modelName}Template> lst = Globals.getTemplateCacheService().get${modelName}TemplateCache().get${modelName}ListByLevel(level);
		if(lst == null || lst.isEmpty()){
			Loggers.corpsTaskLogger.error("#${modelName}Service#randTask result is null!level="+ level);
			return null;
		}
		List<${modelName}Template> cList = RandomUtils.hitObjects(lst, 1);
		if(cList != null){
			return cList.get(0);
		}
		return null;
	}

	public boolean onAcceptTaskImpl(Human human, ${modelName} corpsTask) {
		checkHumanValid(human);
		
		//当前是否已领取任务
		if(human.get${modelName}Manager().isDoing()){
			return false;
		}
		
		//设置当前任务
		human.get${modelName}Manager().setCurTask(corpsTask);
		human.setModified();
		
		//给前台发消息,更新进行中的任务
		human.sendMessage(buildGCOpen${bigModelName}Panel(human));
		human.sendMessage(buildGC${bigModelName}Update(corpsTask));
		
		//记录日志
		Globals.getLogService().send${modelName}Log(human, ${modelName}LogReason.ACCEPT_TASK, "",
				corpsTask.getQuestId(), corpsTask.getStatus().getIndex());
		
		return true;
	}
	
	protected GC${bigModelName}Update buildGC${bigModelName}Update(${modelName} corpsTask){
		GC${bigModelName}Update msg = new GC${bigModelName}Update();
		msg.setQuestInfo(corpsTask.buildQuestInfo());
		return msg;
	}
	
	protected GCOpen${bigModelName}Panel buildGCOpen${bigModelName}Panel(Human human){
		int finishTimes = human.getBehaviorManager().getCount(BehaviorTypeEnum.${behavior});
		int totalTimes = human.getBehaviorManager().getMaxCount(BehaviorTypeEnum.${behavior});
		
		GCOpen${bigModelName}Panel msg = new GCOpen${bigModelName}Panel();
		msg.setFinishTimes(finishTimes);
		msg.setTotalTimes(totalTimes);
		return msg;
	}

	/**
	 * 放弃 任务
	 * @param human
	 */
	public void giveUpTask(Human human) {
		checkHumanValid(human);
		
		//是否有任务
		if(!human.get${modelName}Manager().isDoing()){
			return;
		}
		
		//获取当前任务
		${modelName} curTask = human.get${modelName}Manager().getCurTask();
		if(curTask == null ||!curTask.canGiveUpTask()){
			return;
		}
		
		int questId = curTask.getQuestId();
		int status = curTask.getStatus().getIndex();
		curTask.onGiveUpTask();
		
		//记录日志
		Globals.getLogService().send${modelName}Log(human, ${modelName}LogReason.GIVEUP_TASK,	 "",
				questId, status);
		
	}

	public boolean onGiveupTaskImpl(Human human) {
		checkHumanValid(human);
		
		//放弃任务后，扣除本次任务次数
		human.getBehaviorManager().doBehavior(BehaviorTypeEnum.${behavior});
		
		//获取当前任务
		${modelName} curTask = human.get${modelName}Manager().getCurTask();
		if(curTask == null){
			return false;
		}
		
		//发消息更新任务
		human.sendMessage(buildGCOpen${bigModelName}Panel(human));
		human.sendMessage(buildGC${bigModelName}Update(curTask));
		human.get${modelName}Manager().clearCurTask();
		human.setModified();
		return true;
	}

	/**
	 * 完成任务
	 * @param human
	 */
	public void finishTask(Human human) {
		checkHumanValid(human);
		
		//是否有任务
		if(!human.get${modelName}Manager().isDoing()){
			return;
		}
		
		//获取当前任务
		${modelName} curTask = human.get${modelName}Manager().getCurTask();
		if(curTask == null ||!curTask.canFinishTask()){
			return;
		}
		
		int questId = curTask.getQuestId();
		int status = curTask.getStatus().getIndex();
		
		boolean flag = curTask.onFinishTask();
		if(!flag){
			Loggers.questLogger.error("玩家试图完成一个不可完成的任务！humanId=" + 
					human.getCharId() + ";questId=" + questId);
			return;
		}
		
		//记录日志
		Globals.getLogService().send${modelName}Log(human, ${modelName}LogReason.FINISH_TASK, "",
				questId, status);
	}

	public boolean onFinishTaskImpl(Human human) {
		checkHumanValid(human);
		
		//任务完成计数
		human.getBehaviorManager().doBehavior(BehaviorTypeEnum.${behavior});
		
		
		//获取当前任务
		${modelName} curTask = human.get${modelName}Manager().getCurTask();
		if(curTask == null){
			return false;
		}
		
		//发消息更新任务
		human.sendMessage(buildGCOpen${bigModelName}Panel(human));
		human.sendMessage(buildGC${bigModelName}Update(curTask));
		
		//玩家能否继续做任务,如不可以,则发消息通知
		boolean canDo = human.getBehaviorManager().canDo(BehaviorTypeEnum.${behavior});
		if(!canDo){
			//通知客户端,任务已经做完了
			human.sendErrorMessage(LangConstants.CORPSTASK_FINISH_ALL
					, human.getBehaviorManager().getMaxCount(BehaviorTypeEnum.${behavior}));
		}
		else{
			//发送下一个任务
			int corpsLevel = Globals.getCorpsService().getUserCorpsLevel(human.getCharId());
			if(corpsLevel <= 0){
				return false;
			}
			this.acceptTask(human, corpsLevel);
		}
		
		return true;
	}

	/**
	 * 玩家登陆时发送任务信息
	 * @param human
	 */
	public void sendCur${modelName}Msg(Human human) {
		checkHumanValid(human);

		//是否有进行中的任务
		if(!human.get${modelName}Manager().isDoing()){
			return;
		}
		
		${modelName} curTask = human.get${modelName}Manager().getCurTask();
		if(curTask == null){
			return;
		}
		
		//发送前台消息
		human.sendMessage(buildGCOpen${bigModelName}Panel(human));
		human.sendMessage(buildGC${bigModelName}Update(curTask));
		
	}

}