#if(${mmo_db.ip}==${server.lanIp})
hibernate.connection.url=jdbc:mysql://127.0.0.1:${mmo_db.port}/${mmo_db.database}?useUnicode=true&characterEncoding=utf-8&useServerPrepStmts=true
#else
hibernate.connection.url=jdbc:mysql://${mmo_db.ip}:${mmo_db.port}/${mmo_db.database}?useUnicode=true&characterEncoding=utf-8&useServerPrepStmts=true
#end
hibernate.connection.username=${mmo_db.username}
hibernate.connection.password=${mmo_db.password}
hibernate.connection.provider_class=org.hibernate.connection.C3P0ConnectionProvider

hibernate.show_sql=false

hibernate.hbm2ddl.auto=update
hibernate.c3p0.min_size=2
hibernate.c3p0.max_size=8
hibernate.c3p0.timeout=120
hibernate.c3p0.max_statements=50
