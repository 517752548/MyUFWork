<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns="http://com.imop.lj.message" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://com.imop.lj.message message.xsd" module="ringtask">

	<message type="GC_OPEN_RINGTASK_PANEL" comment="打开跑环任务面板">
		<field type="Integer" name="finishTimes" comment="今日已完成任务数" />
		<field type="Integer" name="totalTimes" comment="总任务数" />
		<field type="Integer" name="giveUpTimes" comment="今日已放弃次数" />
		<field type="Integer" name="giveUpTotalTimes" comment="总放弃次数" />
	</message>

	<message type="GC_RINGTASK_DONE" comment="已完成所有任务">
	</message>
	
	<message type="GC_RINGTASK_UPDATE" comment="跑环任务更新消息">
		<field type="com.imop.lj.common.model.quest.QuestInfo"
			clientType="QuestInfoData" name="questInfo" comment="单个任务" macro="QuestInfo">
		</field>
	</message>
	
	<message type="CG_RINGTASK_ACCEPT" comment="接受任务">
	</message>
	
	<message type="CG_GIVE_UP_RINGTASK" comment="放弃已接任务">
	</message>
	
	<message type="CG_FINISH_RINGTASK" comment="完成任务">
	</message>

</messages>